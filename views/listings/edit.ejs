<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit this listing...</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
      <div class="mb-3 mt-3">
        <label for="title" class="form-label m-0" >Title</label>
        <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control m-0">
      </div>

      <div class="mb-3">
        <label for="description" class="form-label m-0">Description</label>
        <textarea name="listing[description]" type="text" class="form-control m-0"><%=listing.description%></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label m-0">Image Link</label>
        <input name="listing[image]" value="<%=listing.image%>" type="text" class="form-control m-0">
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label m-0">Price</label>
          <input name= "listing[price]" value="<%=listing.price%>" type="number" class="form-control m-0">
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label m-0">Country</label>
          <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control m-0">
        </div>
      </div>
      
      <div class="mb-3">
        <label for="location" class="form-label m-0">Location</label>
        <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control m-0">
      </div>
      
      <button class="btn btn-dark edit-btn mb-3 mt-3">Edit</button>
    </form>
  </div>
</div>
